<h1>Summary</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.date %></td>
        <td><%= entry.comment %></td>
        <td><%= link_to 'Show', "/entries/show/#{entry.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
