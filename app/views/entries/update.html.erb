<h1>Update entry</h1>

<%= form_for @entry, url: "/entries/update?id=#{@entry.id}" do |f| %>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', '/entries/index' %>
